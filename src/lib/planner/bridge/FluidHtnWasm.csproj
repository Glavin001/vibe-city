<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <RuntimeIdentifier>browser-wasm</RuntimeIdentifier>
    <OutputType>Exe</OutputType>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <ImplicitUsings>enable</ImplicitUsings>
    <WasmMainJSPath>main.js</WasmMainJSPath>
    <InvariantGlobalization>true</InvariantGlobalization>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="../fluid-hierarchical-task-network/Fluid-HTN/**/*.cs"
             Exclude="../fluid-hierarchical-task-network/Fluid-HTN/**/obj/**;../fluid-hierarchical-task-network/Fluid-HTN/**/bin/**" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="TypeGen" Version="2.5.2" />
  </ItemGroup>
</Project>


